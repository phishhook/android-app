<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_bg"
    android:paddingBottom="20dp">

    <!-- Container for Date Label and Button -->
    <LinearLayout
        android:id="@+id/urlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/font_family"
            android:text="Link:"
            android:textColor="@color/softBlack"
            android:textSize="25sp" />

        <!-- URL TextView -->
        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/font_family"
            android:maxEms="50"
            android:maxLines="1"
            android:text="Value"
            android:textColor="@color/softBlack"
            android:textSize="25sp" />

    </LinearLayout>

    <!-- Container for Date Label and Button -->
    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/urlContainer"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/font_family"
            android:text="Date:"
            android:textColor="@color/softBlack"
            android:textSize="25sp" />

        <!-- Date TextView Styled as Button -->
        <Button
            android:id="@+id/clicked_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/url"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/font_family"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="Value"
            android:textAllCaps="false"
            android:textColor="@color/whiteAccent"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Container for Status Label and Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateContainer"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/font_family"
            android:text="Status:"
            android:textColor="@color/softBlack"
            android:textSize="25sp" />

        <!-- Status TextView Styled as Button -->
        <Button
            android:id="@+id/is_phishing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clicked_at"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/font_family"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="Value"
            android:textAllCaps="false"
            android:textColor="@color/whiteAccent"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
